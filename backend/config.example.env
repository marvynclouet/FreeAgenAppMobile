# Configuration base de données
DB_HOST=localhost
DB_PORT=8889
DB_NAME=freeagent_db
DB_USER=root
DB_PASSWORD=root

# Configuration JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Configuration Apple Store Connect
APPLE_SHARED_SECRET=your_apple_shared_secret_here
APPLE_BUNDLE_ID=com.example.freeagentapp

# Configuration Google Play Console
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-service-account-key.json
GOOGLE_PLAY_PACKAGE_NAME=com.example.freeagentapp
GOOGLE_PLAY_PRIVATE_KEY=your_google_private_key
GOOGLE_PLAY_CLIENT_EMAIL=your_service_account_email
GOOGLE_PLAY_PROJECT_ID=your_project_id

# Configuration serveur
PORT=3000
NODE_ENV=development

# Configuration Email (Option 1: SMTP générique)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@freeagent.app

# Configuration Email (Option 2: Gmail avec App Password)
# GMAIL_USER=your-email@gmail.com
# GMAIL_APP_PASSWORD=your-gmail-app-password

# URL du frontend (pour les liens dans les emails)
FRONTEND_URL=https://free-agen-app.vercel.app
